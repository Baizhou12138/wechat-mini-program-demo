
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 80%;
  margin-bottom: 20px;
}

.column {
  display: flex;
  flex-direction: column;
  width: 45%;
}

.word {
  padding: 10px;
  margin: 5px;
  border: 1px solid #ccc;
  cursor: pointer;
}

.selected {
  background-color: blue;
  color: white;
}

.navigation {
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
}

.arrow {
  padding: 10px;
  border: 1px solid #ccc;
  cursor: pointer;
}
.arrow-left,
.arrow-right {
  width: 30px;
  height: 30px;
	cursor: pointer;
	margin: 0 20px;
}